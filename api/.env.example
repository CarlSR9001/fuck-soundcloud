# App Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Music Platform API
API_PREFIX=api/v1

# CORS
CORS_ORIGINS=http://localhost:3001
CORS_CREDENTIALS=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=platform
DB_PASSWORD=platform
DB_NAME=platform
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=false
DB_POOL_SIZE=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

# MinIO Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1
MINIO_BUCKET_ORIGINALS=originals
MINIO_BUCKET_TRANSCODES=transcodes
MINIO_BUCKET_IMAGES=images
MINIO_BUCKET_WAVEFORMS=waveforms
MINIO_BUCKET_STEMS=stems

# JWT
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change-me-refresh-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Queue
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=1000
QUEUE_REMOVE_ON_COMPLETE=true
QUEUE_REMOVE_ON_FAIL=false

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
